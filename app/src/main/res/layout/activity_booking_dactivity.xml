<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".BookingDActivity"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:padding="10dp"
    android:background="@drawable/round_corner">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginBottom="5dp"
            android:textColor="#333333"
            android:fontFamily="sans-serif"
            android:textAllCaps="true"
            android:text="Name"/>
        <TextView
            android:id="@+id/tvNameS"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reemu"
            android:layout_marginBottom="20dp"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginBottom="5dp"
            android:textColor="#333333"
            android:fontFamily="sans-serif"
            android:textAllCaps="true"
            android:text="Mobile No"/>
        <TextView
            android:id="@+id/tvMobS"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9876543210"
            android:layout_marginBottom="20dp"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginBottom="5dp"
            android:textColor="#333333"
            android:fontFamily="sans-serif"
            android:textAllCaps="true"
            android:text="Address"/>
        <EditText
            android:id="@+id/etAddS"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginBottom="20dp"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="#333333"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="5dp"
            android:textAllCaps="true"
            android:text="Payment Mode"/>
        <TextView
            android:id="@+id/tvPaymentDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COD"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"
            android:textSize="20sp"/>
        <TextView
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#333333"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:text="Status"/>
        <TextView
            android:id="@+id/tvBookingStatus"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Complete"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textAllCaps="true"
            android:textColor="#333333"
            android:layout_marginBottom="5dp"
            android:fontFamily="sans-serif"
            android:text="Total Amout"/>
        <TextView
            android:id="@+id/tvtotalamount"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/btnplaceorder"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Place order"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/buttonstylepink"
            />
    </LinearLayout>
</LinearLayout>