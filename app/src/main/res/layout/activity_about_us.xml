<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#efe6df"
    tools:context=".AboutUsActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:scaleType="fitXY"
        android:src="@drawable/au"></ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="25dp"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            android:gravity="left"
            android:text="Cake Fantasy is a unique shop.We take pride in using natural ingredients and baking our cupcakes , cakes and desserts from scratch.We utilize quality material to make your cake flavourful and more delecious.We guarantee the quality in every single step of assembling the cake.
We bake happiness for you in the face of cake . Let us deliver sweetness in your lives."
            android:textColor="#74052C"
            android:textSize="25dp" />
    </LinearLayout>
</LinearLayout>