<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:elevation="5dp"
        android:padding="20dp"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:padding="5dp"
                android:id="@+id/ivSubSubCatimage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:foregroundGravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/cakeicon" />
            <TextView
                android:layout_toEndOf="@id/ivSubSubCatimage"
                android:id="@+id/tvCakeName"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/b"
                android:text="Cakes"
                android:textSize="30dp"/>

            <TextView
                android:layout_toEndOf="@id/ivSubSubCatimage"
                android:layout_below="@id/items"
                android:layout_marginStart="10dp"
                android:id="@+id/amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Total Amount:-"
                android:textSize="20dp"/>
            <TextView
                android:layout_toEndOf="@id/amt"
                android:layout_below="@id/tvitems"
                android:id="@+id/tvtotalamount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:hint="2000"
                android:layout_marginStart="8dp"
                android:textSize="20dp"/>
            <TextView
                android:layout_toEndOf="@id/ivSubSubCatimage"
                android:layout_below="@id/tvCakeName"
                android:id="@+id/items"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Total Items:-"
                android:textSize="20dp" />
            <TextView
                android:layout_toEndOf="@id/items"
                android:layout_below="@id/tvCakeName"
                android:id="@+id/tvitems"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:hint="2"
                android:textSize="20dp"/>
            <View
                android:id="@+id/tvview"
                android:layout_below="@id/amt"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:paddingBottom="5dp"
                android:background="@color/darkgrey"
                />
            <TextView
                android:layout_below="@id/amt"
                android:id="@+id/tvstatusview"
                android:gravity="center"
                android:layout_marginStart="20dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Status"
                android:paddingBottom="5dp"
                android:textSize="20dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>





</LinearLayout>